<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
      http://www.springframework.org/schema/beans        
      http://www.springframework.org/schema/beans/spring-beans.xsd
      http://cxf.apache.org/jaxrs
      http://cxf.apache.org/schemas/jaxrs.xsd
      http://cxf.apache.org/jaxws
      http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<bean id="restfulRegeditService" class="zxn.ws.service.impl.RestfulRegeditServiceImpl" />
	<!--restful服务 -->
	<jaxrs:server id="restServiceContainer" address="/">
		<jaxrs:serviceBeans>
			<ref bean="restfulRegeditService" />
		</jaxrs:serviceBeans>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
		</jaxrs:extensionMappings>

	</jaxrs:server>
	
	<bean id="restBuyOrderService" class="com.valueline.module.webapi.rs.order.RestBuyOrderService">
	     <property name="buyOrderService" ref="buyOrderService" />
	</bean>
	<!--restful服务 -->
	<jaxrs:server id="restBuyOrderServiceContainer" address="/">
		<jaxrs:serviceBeans>
			<ref bean="restBuyOrderService" />
		</jaxrs:serviceBeans>
	</jaxrs:server>
</beans> 